{
  "name" : "LibMod",
  "documentation" : "token",
  "changeLoadToInit" : 0,
  "autoExpose" : {
    "install" : "ignore",
    "defaultShowOutput" : 1,
    "showOutput" : [],
    "includeFilter": "public",
    "include" : ["^mod\\.pvt.*$","json\\.getSafe"],
    "exclude" : ["Configure", "openDatabase"]
  },
  "library.json" : {
     "authors" : ["Witness1"],
     "name" : "Lib:Mod",
     "licenseFile" : "LICENSE.TXT",
     "license" : "WTFPL",
     "shortDescription" : "LibMod is a library for buff and effect handling.",
     "namespace" : "w1.lmod",
     "allowsUriAccess" : true,
     "website" : "https://github.com/StefanoMarina/mt-mods",
     "version" : "1.2.0",
     "readMeFile" : "README.md",
     "description" : "LibMod allows certain d20 operations such as raw stat to modifier (ie. Strength 15 equals +1), and management of modifiers, buffs and effects.",
     "gitUrl" : "https://github.com/StefanoMarina/mt-mods.git"
  },
  "rename" : {
    "public" : {
      "folder" : "library/mtscript/public",
  		"map" : "macro_script_map.txt",  
  		"include" : ["^effect\\..*$", "^mod\\.(?!pvt).*$", "get.*", "setEffect", "onInit", "onFirst.*", "Configure", "openDatabase$", "isMod"]
    },
    "private": {
      "sourceFolder": "library/mtscript/public",
      "folder" : "library/mtscript",
  		"map" : "macro_script_map.txt",
  		"excludeFilter" : "public",
  		"exclude" : ["^Edit buffs$", "^Effect Library$", "^Effects$", "onCampaignLoad"]
    }
  },
	"events.json": {
	  "events" : [
      { "name" : "onFirstInit", "mts" : "onFirstInit" },
      { "name" : "onInit", "mts" : "onInit" }
	  ]
	},
  "zip" : {
    "exclude" : ["*.md"]
  }
}
